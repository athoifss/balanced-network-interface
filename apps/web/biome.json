{
  "$schema": "https://biomejs.dev/schemas/1.6.1/schema.json",
  "extends": ["../../biome.json"],
  "formatter": {
    "enabled": true,
    "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "**/*.json"],
    "ignore": ["**/node_modules/**", "**/dist/**", "**/public/**", "./src/charting_library/**", "./src/locales/**"]
  },
  "linter": {
    "enabled": true,
    "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "**/*.json"],
    "ignore": ["**/node_modules/**", "**/dist/**", "**/public/**", "./src/charting_library/**", "./src/locales/**"],
    "rules": {
      "style": {
        "noNonNullAssertion": "off",
        "useTemplate": "off",
        "useImportType": "off",
        "useNodejsImportProtocol": "off",
        "noInferrableTypes": "off",
        "useEnumInitializers": "off",
        "useNumberNamespace": "off"
      },
      "complexity": {
        "useLiteralKeys": "off",
        "noForEach": "off"
      },
      "suspicious": {
        "noExplicitAny": "off"
      }
    }
  }
}
